from kivy.uix.image import Image
from kivy.app import App
from kivy.uix.label import Label
from kivy.uix.button import Button
from kivy.uix.relativelayout import RelativeLayout
from kivy.uix.boxlayout import BoxLayout
from kivy.config import Config
Config.set('input', 'mouse', 'mouse,multitouch_on_demand') # makes it so right clicking will not make red dots appear
"""
    Color Settings first in rgba: Teal = (0,128/255,128/255,1) / Orange = (223/255,111/255,18/255, 1)
    change the screens to Screen class
"""
class StartButton(Button):
    def on_press(self):
        ms = MainScreen()
        temp = self.parent
        self.parent.clear_widgets()
        temp.add_widget(ms)

class OptionButton(Button):
    def on_press(self):
        os = OptionScreen()
        temp = self.parent
        self.parent.clear_widgets()
        temp.add_widget(os)
class Title(Image):
    pass

class StartScreen(RelativeLayout):
    pass

class OptionScreen(BoxLayout): 
    pass

class MainScreen(RelativeLayout):
    pass
class PlannerApp(App): #main app where everything is added or removed
    def build(self):
        self.primaryColor = (0,128/255,128/255,1)
        self.secondaryColor = (223/255,111/255,18/255, 1)
        startingScreen = StartScreen()
        return  startingScreen
    
if __name__ == '__main__': #opens the app
    app = PlannerApp()
    app.run()
